{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@biosimulations/shared/assets": ["libs/shared/assets/src/index.ts"],
      "@biosimulations/shared/styles": ["libs/shared/styles/src/index.ts"],
      "@biosimulations/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@biosimulations/shared/icons": ["libs/shared/icons/src/index.ts"],
      "@biosimulations/shared/debug": ["libs/shared/debug/src/index.ts"],
      "@biosimulations/auth/common": ["libs/auth/common/src/index.ts"],
      "@biosimulations/auth/angular": ["libs/auth/angular/src/index.ts"],
      "@biosimulations/auth/nest": ["libs/auth/nest/src/index.ts"],
      "@biosimulations/config/common": ["libs/config/common/src/index.ts"],
      "@biosimulations/config/nest": ["libs/config/nest/src/index.ts"],
      "@biosimulations/config/angular": ["libs/config/angular/src/index.ts"],
      "@biosimulations/shared/datamodel": [
        "libs/shared/datamodel/src/index.ts"
      ],
      "@biosimulations/platform/api-models": [
        "libs/platform/api-models/src/index.ts"
      ],
      "@biosimulations/platform/database-models": [
        "libs/platform/database-models/src/index.ts"
      ],
      "@biosimulations/platform/view": ["libs/platform/view/src/index.ts"],
      "@biosimulations/simulators/api-models": [
        "libs/simulators/api-models/src/index.ts"
      ],
      "@biosimulations/shared/environments": [
        "libs/shared/environments/src/index.ts"
      ],
      "@biosimulations/dispatch/datamodel": [
        "libs/dispatch/datamodel/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
