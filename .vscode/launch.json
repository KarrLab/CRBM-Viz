{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Serve:API",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["nx", "run", "api:serve"],
      "skipFiles": ["<node_internals>/**"],
      "port": 9229, // ensure Nx is configured to open this port for debugging
      "console": "integratedTerminal"
      // "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Serve:Dispatch-Service",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["nx", "run", "dispatch-service:serve"],
      "skipFiles": ["<node_internals>/**"],
      "port": 9229,
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "attach:nx",
      "port": 9229,
      "address": "localhost",
      "restart": true,
      "protocol": "inspector",
      "skipFiles": ["<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    },
    {
      "type": "debugpy",
      "request": "launch",
      "name": "launch:debugpy",
      "program": "${workspaceFolder}/${input:programPath}",
      "console": "integratedTerminal"
    },
    {
      "type": "python",
      "request": "launch",
      "name": "Serve:Combine-API",
      "module": "gunicorn",
      "args": [
        "-w",
        "4", // Number of worker processes
        "-b",
        "127.0.0.1:8000", // Bind to address and port
        "app:app" // Module and application instance
      ],
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Debug > Services > NestJS",
      "configurations": ["Serve:API", "Serve:Dispatch-Service"]
    }
  ]
}
