{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Nx API: Serve",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["nx", "run", "api:serve"],
      "skipFiles": ["<node_internals>/**"],
      "port": 9229, // Ensure Nx is configured to open this port for debugging
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Nx API",
      "port": 9229,
      "address": "localhost",
      "restart": true,
      "protocol": "inspector",
      "skipFiles": ["<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    }
  ]
}
