{
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(chore)"
  ],
  "rebaseWhen": "auto",
  "pip_requirements": {
    "fileMatch": ["Pipfile", "Pipfile.lock"]
  },
  "patch": {
    "automerge": true
  },
  "pin": {
    "automerge": true
  },
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "addLabels": ["dev"]
    },
    {
      "matchUpdateTypes": ["pin"],
      "automerge": true
    },
    {
      "matchPackagePrefixes": ["@types/"],
      "automerge": true, 
      "groupName": "types"
    },
    {
      "matchPackagePrefixes": ["eslint"],
      "automerge": true, 
      "groupName": "eslint"
    },
    {
      "matchPackagePrefixes": ["@nestjs/"],
      "groupName": "nest"
    },
     {
      "matchPackagePrefixes": [ "@angular" ],
      "groupName": "angular"
    }
  ],
  "prConcurrentLimit": 5
}
