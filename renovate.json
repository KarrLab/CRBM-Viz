{
  "extends": [
    "config:base"
  ],
  "rebaseWhen": "auto",
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "addLabels": ["dev"]
    },
    {
      "matchUpdateTypes": ["pin"],
      "automerge": true
    },
    {
      "matchPackagePrefixes": ["@types"],
      "automerge": true, 
      "groupName": "types"
    },
     {
      "matchPackagePrefixes": [ "@angular" ],
      "groupName": "angular"
    }
  ],
  "pip_requirements": {
    "fileMatch": ["Pipfile"]
  },
  "prConcurrentLimit": 3
}
