{
  "extends": [
    "config:base"
  ],
  "rebaseWhen": "auto",
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "addLabels": ["dev"]
    },
    {
      "matchUpdateTypes": ["pin"],
      "automerge": true
    },
    {
      "matchPackagePrefixes": ["@types"],
      "automerge": true
    }
  ],
  "prConcurrentLimit": 3
}
