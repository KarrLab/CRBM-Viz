{
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(chore)",
    "group:nodeJs"
  ],
  "rebaseWhen": "auto",
  "pip_requirements": {
    "fileMatch": [
      "(^|/)Pipfile$",
      "(^|/)Pipfile.lock$"
    ]
  },
  "patch": {
    "automerge": true
  },
  "pin": {
    "automerge": true
  },
  "minor": {
    "automerge": true
  },
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchLanguages": ["python"],
      "automerge": false
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "addLabels": [
        "dev"
      ]
    },
    {
      "matchUpdateTypes": [
        "pin"
      ],
      "automerge": true
    },
    {
      "matchPackagePrefixes": [
        "@types/"
      ],
      "automerge": true,
      "groupName": "types"
    },
    {
      "matchPackagePrefixes": [
        "eslint"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "automerge": true,
      "groupName": "eslint"
    },
    {
      "matchPackagePrefixes": [
        "@nestjs/"
      ],
      "groupName": "nest"
    },
    {
      "matchPackagePrefixes": [
        "@nrwl"
      ],
      "groupName": "nrwl",
      "enabled": false
    },
    {
      "matchPackagePrefixes": [
        "@angular"
      ],
      "groupName": "angular",
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false
    },
    {
      "matchPackagePrefixes": [
        "aws-sdk"
      ],
      "automerge": true,
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ],
  "prConcurrentLimit": 5
}
